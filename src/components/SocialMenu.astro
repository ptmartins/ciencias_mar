---
import SocialIcon from "./SocialIcon.astro";
const { links, color } = Astro.props;
---

<div class="social">
    <ul class="social__list" style={ `color: ${ color }` }>
        {
            links.map(link => (
                <li class="social__item">
                    <a href={ link.href } class="social__link">
                        <SocialIcon network={ link.network } />
                    </a>
                </li>
            ))
        }
    </ul>
</div>

<style>

    .social__list {
        display: flex;
        gap: 1.5rem;
    }

    .social__link {
        color: inherit;
        font-size: 2.1rem;
        opacity: .85;
        transition: var(--default-transition);

        &:hover {
            opacity: 1;
        }
    }

</style>